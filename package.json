{
  "name": "electron-color",
  "version": "1.0.1",
  "description": "An HSL color picker and eye dropper application",
  "repository": "https://github.com/benjaminadk/electron-color",
  "main": "./dist/main/main.js",
  "scripts": {
    "dev": "electron-webpack dev",
    "prod": "electron ./dist/main/main.js",
    "compile": "electron-webpack",
    "release": "electron-builder -p onTagOrDraft"
  },
  "keywords": [],
  "author": "benjaminadk",
  "license": "MIT",
  "build": {
    "appId": "com.electron.hslpicker",
    "productName": "Color Tool",
    "win": {
      "icon": "static/picker-icon-1.ico",
      "publish": {
        "provider": "github",
        "owner": "benjaminadk"
      },
      "target": [
        "nsis"
      ]
    },
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "devtron": "^1.4.0",
    "electron": "^3.0.0",
    "electron-builder": "^20.28.4",
    "electron-webpack": "^2.3.1",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "webpack": "^4.19.1"
  },
  "dependencies": {
    "@material-ui/core": "^3.1.0",
    "@material-ui/icons": "^3.0.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-updater": "^3.1.2",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "rgb-to-hsl": "0.0.3",
    "source-map-support": "^0.5.9"
  }
}
